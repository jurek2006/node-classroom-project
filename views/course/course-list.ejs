<%- include('../includes/html-head.ejs') %>

<div class="card">
    <div class="card-header __responsive">
        <h1 class="card__title __responsive__item"><%= title %></h1>
        <div class="btn-group __responsive__item" role="group" aria-label="Courses' actions buttons group">
            <a href="add" class="btn btn-primary"><i class="fas fa-plus"></i> Add new course</a>
        </div>
    </div>
    <div class="card-body">

        <% if(courses.length > 0) {%>
        <ul class="list-group">
            <% for(let course of courses) { %>
            <li class="list-group-item __liButton">
                <a href="/course/<%= course.id %>" class="__liButton__link" data-toggle="tooltip" title="open course's details"> <%= course.courseName %></a>
            </li>
            <% } %>
        </ul>
        <% } else { %>
        <p>There are no courses yet.</p>
        <% } %> 

    </div>
</div>
<%- include('../includes/html-end.ejs') %>


